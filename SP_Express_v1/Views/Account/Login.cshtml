@model LoginViewModel


@{
    ViewData["Title"] = "Вход";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu_Main {
    @{
        await Html.RenderPartialAsync("_MenuMainLog");
    }
}


@section Footer {
    @{
        await Html.RenderPartialAsync("_Footer");
    }
}

<div class="bg_gard">
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h2 class="text-uppercase welcome">Вход или регистрация</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-9 col-11 all_border m-5" style="border-radius: 15px;">
            <form asp-action="Login" asp-controller="Account" method="post" asp-antiforgery="true">
                <div class="row text-center">
                    <div class="col-12 mt-3">
                        <h2 class="text-uppercase">Вход</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-11">
                        <div class="form-group vmp_form-group form_box_agm_top">
                            <label for="email" class="text-uppercase form-label">E-mail</label>
                            <input asp-for="Email" type="email" id="email" class="field no-border form-input">
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-11">
                        <div class="form-group vmp_form-group form_box_agm_top">
                            <label for="password" class="text-uppercase form-label">Пароль</label>
                            <input asp-for="Password" type="password" id="password" class="field_pas no-border form-input">
                            <a href="#" class="password-control mb-1" onclick="return show_hide_password(this, 'password');" style="color: #264d73">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="validation text-danger mt-2" asp-validation-summary="ModelOnly"></div>

                <div class="row text-center">
                    <div class="col-12">
                        <button type="submit" class="btn btn-outline-primary btn-lg m-3">Войти</button>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-12">
                        <h4 class="text-uppercase">Или</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center mb-3">
                        <a asp-action="Register" asp-controller="Account" class="signIn_link text-uppercase">Регистрация</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/showHidePass.js"></script>
