@model RegisterViewModel



@{
    ViewData["Title"] = "Регистрация";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Menu_Main {
@{
await Html.RenderPartialAsync("_MenuMainLog");
}
}
@section Footer {
@{
await Html.RenderPartialAsync("_Footer");
}
}

<div class="bg_gard">
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h2 class="text-uppercase welcome">Регистрация</h2>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-9 col-11 all_border m-5" style="border-radius: 15px;">
            <div class="row text-center">
                <div class="col-12 mt-3">
                    <h2 class="text-uppercase">Зарегистрироваться как</h2>
                </div>
            </div>




            <div class="row justify-content-center" id="ind">
                <form action="">
                    <div class="row text-center">
                        <div class="col-12 my-3">
                            <h2 class="text-uppercase">Физическое лицо</h2>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-11 mt-3">
                            <div class="form-group vmp_form-group form_box_agm_top">
                                <label for="FIOreg" class="text-uppercase form-label">ФИО</label>
                                <input asp-for="FIO" type="text" id="FIOreg" class="field no-border form-input">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row justify-content-center">
                        <div class="col-11">
                            <div class="form-group vmp_form-group form_box_agm_top">
                                <label for="telreg" class="text-uppercase form-label">Телефон</label>
                                <input asp-for="PhoneNumber" type="text" id="telreg" class="field no-border form-input">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row justify-content-center">
                        <div class="col-11">
                            <div class="form-group vmp_form-group form_box_agm_top">
                                <label for="emailReg" class="text-uppercase form-label">E-mail</label>
                                <input asp-for="Email" type="email" id="emailReg" class="field no-border form-input">
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-11 mb-4">
                            <div class="form-group vmp_form-group form_box_agm_top">
                                <label for="passwordReg" class="text-uppercase form-label">Пароль</label>
                                <input asp-for="Password" type="password" minlength="6" maxlength="20" id="passwordReg"
                                       class="field no-border form-input">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row justify-content-center">
                        <div class="col-11 mb-4">
                            <div class="form-group vmp_form-group form_box_agm_top">
                                <label for="passwordReg2" class="text-uppercase form-label">Подтвердить пароль</label>
                                <input asp-for="PasswordConfirm" type="password" minlength="6" maxlength="20" id="passwordReg2"
                                       class="field no-border form-input">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row text-center">
                        <div class="col-12">
                            <button type="submit" class="btn btn-outline-primary btn-lg m-3">Зарегистрироваться</button>
                        </div>
                    </div>
                </form>
            </div>



        </div>
    </div>
</div>



@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

